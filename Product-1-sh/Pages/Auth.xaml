<Page x:Class="Product_1_sh.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Product_1_sh.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">
    <StackPanel Background="White" Margin="0,10,0,0">
        <Label Content="Login"/>
        <TextBox x:Name="LoginTextBox" Text="admin"/>
        <Label Content="Password"/>
        <PasswordBox x:Name="PasswordTextBox" Password="admin"/>
        <Label Content="Неверный логин или пароль" Visibility="Hidden" x:Name="ErrorBox"/>
        <Button Content="Войти" Click="LoginButton" x:Name="LoginBtn"/>
        <Button Content="Гость" Click="Button_Click_1"/>
        <Label Content="Введите капчу" Visibility="Hidden" x:Name="LableCapcha"/>
        <TextBlock Text="" Visibility="Hidden" x:Name="BlockCapcha"/>
        <TextBox Text="" x:Name="ConfirmCapcha" Visibility="Hidden"/>
    </StackPanel>
</Page>
