<Page x:Class="Product_1_sh.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Product_1_sh.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">
    <StackPanel Margin="0,146,0,202">
        <TextBlock Text="Неверный логин или пароль" Visibility="Hidden"/>
        <TextBlock Text="Login"/>
        <TextBox x:Name="LoginTextBox"/>
        <TextBlock Text="Password"/>
        <PasswordBox x:Name="PasswordTextBox"/>
        <Button Content="Login" Click="LoginButton"/>
    </StackPanel>
</Page>
